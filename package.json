{
    "private": true,
    "name": "sui",
    "workspaces": [
        "docs",
        "packages/*"
    ],
    "scripts": {
        "docs:dev": "vitepress dev docs",
        "docs:build": "npm run docs:sui-build && vitepress build docs",
        "docs:serve": "vitepress serve docs",
        "docs:watch": "npm run docs:sui-watch & npm run docs:dev",
        "docs:sui-build": "cd docs/sui && npm run build",
        "docs:sui-watch": "cd docs/sui && npm run watch",
        "lint": "eslint ./packages/**/*.js ./jest/**/*.js --fix",
        "test": "jest --watchAll"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.15.0",
        "@sui/accordion": "file:packages/accordion",
        "@sui/alert": "file:packages/alert",
        "@sui/tailwind-base": "file:packages/tailwind-base",
        "@sui/tailwind-plugins": "file:packages/tailwind-plugins",
        "@vitejs/plugin-vue": "^1.3.0",
        "@vue/compiler-sfc": "^3.2.4",
        "autoprefixer": "^10.3.1",
        "body-scroll-lock": "^3.1.5",
        "eslint": "^7.32.0",
        "eslint-import-resolver-alias": "^1.1.2",
        "eslint-plugin-import": "^2.24.1",
        "eslint-plugin-vue": "^7.16.0",
        "jest": "^26.0.1",
        "jest-diff": "^27.0.6",
        "lazysizes": "^5.3.2",
        "lodash": "^4.17.21",
        "postcss-color-function": "^4.1.0",
        "prettier": "^2.3.2",
        "prismjs": "^1.24.1",
        "sass": "^1.38.0",
        "tailwindcss": "^2.2.7",
        "vite": "^2.5.0",
        "vite-plugin-eslint": "^1.3.0",
        "vitepress": "^0.16.1",
        "vue": "^3.2.4"
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/jest/matchers.js"
        ]
    }
}
